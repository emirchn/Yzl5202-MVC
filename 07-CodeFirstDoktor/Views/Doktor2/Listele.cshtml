@model List<Doktor>
@if (TempData["sonuc"] != null)
{
	<div class="alert alert-success">
		@TempData["sonuc"]
	</div>
}
<p>
	<a href="@Url.Action("Ekle", "Doktor2")" class="btn btn-success">Yeni Doktor Ekle</a>
</p>
	<table class="table table-hover table-dark">
	<thead>
		<tr>
			<th>ID</th>
			<th>Ad</th>
			<th>Soyad</th>
			<th>Dogum Tarihi</th>
			<th>Mail</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Id</td>
				<td>@item.Ad</td>
				<td>@item.Soyad</td>
				<td>@item.DogumTarihi.ToShortDateString()</td>
				<td>@item.Email</td>
				<td>
					<a href="@Url.Action("Guncelle", "Doktor2", new { id = item.Id })" class="btn btn-primary">Güncelle</a>
					<a href="@Url.Action("Sil", "Doktor2", new { id = item.Id })" class="btn btn-danger">Sil</a>
				</td>
			</tr>
		}
	</tbody>
	</table>
